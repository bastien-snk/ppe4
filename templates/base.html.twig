<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Perpi&Co{% endblock %}</title>
        <link rel="icon" type="image/png" href="logo.png" />
        {% block head_css %}
            <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
        {% endblock %}
        {% block head_js %}
            <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
        {% endblock %}
    </head>
    <body class="font-ubuntu font-semibold">
        {% block body %}
            <nav class="bg-white shadow pt-4 uppercase font-ubuntu font-semibold" role="navigation">
                <div>
                    <img src="../public/img/logo.jpg" class="w-24 items-center mx-auto" />
                </div>
                <div class="mx-auto space-x-9 justify-center container mx-auto p-4 flex flex-wrap md:flex-no-wrap">
                    <span class=" hover:text-blue-500"><a href="{{ path("accueil") }}">🏠 Accueil</a></span>
                    <span class=" hover:text-blue-500"><a href="{{ path("produits_index") }}">🛍️ Produits</a></span>
                    <span class=" hover:text-blue-500"><a href="{{ path("panier") }}">🛒 Panier</a></span>
                    {% if app.user %}
                        <span class=" hover:text-blue-500"><a href="{{ path("app_logout") }}">🔓 Déconnexion</a></span>
                    {% else %}
                        <span class=" hover:text-blue-500"><a href="{{ path("app_login") }}">🔒 Connexion</a></span>
                    {% endif %}
                </div>
            </nav>
        {% endblock %}
    </body>
</html>
